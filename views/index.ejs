<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Show My IP | Home</title>

    <link
      href="https://fonts.googleapis.com/css?family=Roboto:400,100,300,700"
      rel="stylesheet"
      type="text/css"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <section class="ftco-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6 text-center mb-2">
            <!-- <h4>Önceden yapılan tüm istekler</h4> -->
            <h2 class="heading-section">IP Adresiniz: <%= ip %></h2>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="table-wrap">
              <table class="table table-bordered table-dark table-hover">
                <thead>
                  <tr>
                    <th colspan="4">
                      <h4
                        class="
                          h5
                          text-center text-success
                          my-0
                          font-weight-bold
                        "
                      >
                        Önceden yapılan tüm istekler
                      </h4>
                    </th>
                  </tr>
                  <tr>
                    <th>#</th>
                    <th>Tarih</th>
                    <th>IP Adresi</th>
                    <th>Saat Dilimi</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(data) { %>
                  <!---->
                  <% data.map((d, i) => { %>
                  <tr>
                    <th scope="row"><%= i + 1 %></th>
                    <td><%= d.date %></td>
                    <td><%= d.ip %></td>
                    <td><% if(d.timezone) { %> <%= d.timezone %> <% } %></td>
                  </tr>
                  <% }) %>
                  <!---->
                  <% } else { %>
                  <tr>
                    <td rowspan="3" align="center">No data to display</td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
